{% extends 'base.html.twig' %}

{% block title %}ProjectGroup index{% endblock %}

{% block body %}
    <h1>ProjectGroup index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project_group in project_groups %}
            <tr>
                <td>{{ project_group.id }}</td>
                <td>{{ project_group.name }}</td>
                <td>{{ project_group.createdAt ? project_group.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ project_group.updatedAt ? project_group.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_project_group_show', {'id': project_group.id}) }}">show</a>
                    <a href="{{ path('app_project_group_edit', {'id': project_group.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_project_group_new') }}">Create new</a>
{% endblock %}
